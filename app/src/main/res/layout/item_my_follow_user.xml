<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_my_follow_user_avatar"
            android:layout_width="@dimen/iv_my_follow_avatar"
            android:layout_height="@dimen/iv_my_follow_avatar"
            android:src="@drawable/placeholder"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/tv_item_my_follow_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:layout_toEndOf="@+id/iv_my_follow_user_avatar"
            android:layout_toRightOf="@+id/iv_my_follow_user_avatar"
            android:text="昵称"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>

