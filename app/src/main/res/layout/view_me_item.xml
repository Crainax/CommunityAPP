<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:src="@drawable/ic_favorite_black_24dp"
        android:id="@+id/iv_view_me_icon_no_code"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_view_me_title_no_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/iv_view_me_icon_no_code"
        android:layout_toRightOf="@+id/iv_view_me_icon_no_code"
        android:text="标题"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <View
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:background="@color/gray_divider"
        android:layout_below="@id/iv_view_me_icon_no_code"
        android:layout_alignLeft="@id/tv_view_me_title_no_code"
        android:layout_height="1dp" />
</RelativeLayout>