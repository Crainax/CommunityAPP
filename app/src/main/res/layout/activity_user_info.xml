<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--标题栏-->
    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_center_toolbar" />

    <!--昵称及两个按钮-->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_user_info_avatar"
            android:layout_width="@dimen/iv_user_info_avatar"
            android:layout_height="@dimen/iv_user_info_avatar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/placeholder"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/iv_user_info_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@+id/iv_user_info_avatar"
            android:layout_toRightOf="@+id/iv_user_info_avatar"
            android:text="昵称"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/click_user_info_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注" />

            <Button
                android:id="@+id/click_user_info_talk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="对话" />
        </LinearLayout>


    </RelativeLayout>

    <!--参数-->



</LinearLayout>