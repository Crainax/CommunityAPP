<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--文本样式-->
    <!--标题-->
    <style name="UserInfoTextTitle">

        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="UserInfoTextContent">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">64sp</item>

    </style>

    <style name="bt_capsule">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@drawable/bt_capsule</item>

    </style>

    <style name="bt_capsule.match_width">
        <item name="android:layout_marginLeft">47dp</item>
        <item name="android:layout_marginRight">47dp</item>
    </style>
</resources>
